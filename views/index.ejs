<!DOCTYPE html>
<html lang="pl">
    <head>
        <meta charset="UTF-8">
        <title>Strona główna</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    </head>
    <body>
        <div class="container-sm">
            <%- include("header") %>
            <% if(users){ %>
                <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">Imię</th>
                        <th scope="col">Dołączył</th>
                        <th scope="col">Ostatnie logowanie</th>
                        <th scope="col">Liczba wizyt</th>
                        <th scope="col">Zalogowany z</th>
                        <th scope="col">Znak zodiaku</th>
                      </tr>
                    </thead>
                    <tbody>
                        <% for(var i=0; i<users.length; i++) {%>
                            <tr>
                                <th scope="row"><%= i + 1 %></th>
                                <td><%= users[i].name %></td>
                                <td><%= users[i].joined %></td>
                                <td><%= users[i].lastvisit %></td>
                                <td><%= users[i].counter %></td>
                                <td><%= users[i].provider %></td>
                                <td><%= users[i].znak_zodiaku %></td>
                            </tr>
                        <% } %>
                    </tbody>
                  </table>
            <% } else { %>
                <% if(error){ %>
                    <p><%= error %></p>
                <% } else { %>
                    <p>Tak nie powinno być, skontaktuj się z administratorem.</p>
                <% } %>
            <% } %>
        </div>
    </body>
</html>
